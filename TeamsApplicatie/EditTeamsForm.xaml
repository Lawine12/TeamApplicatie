<Window x:Class="TeamsApplicatie.EditTeamsForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TeamsApplicatie"
        mc:Ignorable="d"
        Title="Edit Team" Height="450" Width="800">
    <DockPanel>
        <StackPanel Orientation="Vertical" DockPanel.Dock="Top">
            <Label Margin="350,50, 0, 0">Team Name</Label>
            <TextBox x:Name="textboxTeamName" Margin="180,0"/>
            <Label Margin="350,0">Team Coach</Label>
            <TextBox x:Name="textboxTeamCoach" Margin="180,0" TextChanged="textboxTeamCoach_TextChanged" />
            <Label Margin="350,0">Team Points</Label>
            <TextBox x:Name="textboxPoints" Margin="180,0" TextChanged="textboxPoints_TextChanged" />
        </StackPanel>
        <Grid>
        <Button Content="Cancel" Click="cancel_Click" Margin="10" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
        <Button Content="Save" Click="Save_Click" Margin="10" HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
        </Grid>
    </DockPanel>
</Window>
